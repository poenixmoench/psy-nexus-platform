const express = require('express');
const app = express();

// Fügt die Proxy-Vertrauensstellung hinzu, um HTTPS/Umleitungsschleifen zu beheben.
// Express liest nun den X-Forwarded-Proto Header von NGINX.
app.set('trust proxy', 1);

const port = process.env.PORT || 3000;

app.get('/health', (req, res) => {
  // Hinweis: Ich habe / auf /health geändert, damit der curl-Test funktioniert.
  res.status(200).json({ status: 'ok' });
});

app.listen(port, '0.0.0.0', () => {
  console.log(`✅ Backend listening on port ${port}`);
});
